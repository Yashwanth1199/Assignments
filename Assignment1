import java.util.*;
class demo{
    public static void main(String[]args){
        Scanner s= new Scanner(System.in);
        System.out.print("Enter a number to print if it's positive or negative: ");
        int num= s.nextInt();
        if(num<0){
            System.out.print("It is negative");
        }
        else if(num>0){
            System.out.print("It is postive");
        }
        else if(num==0){
            System.out.print("It is neither positive nor negative");
        }
        else{
            System.out.print("Enter a proper value!");
        }
    }
}
